mixin userData
  form.fila(action="/personal-form-data" method="POST")
    .subtitle.mt-4.mb-2
      h3 Datos Personales
      input.save(type="image", src=".././img/ico/save.svg")
    .bg__2
      label Nombre y apellido:
        input(type="text", name="nombre")
      label.w-100.mt-3 Sexo:
        select.js-sex(name="sexo") 
          option(value="-") -
          option(value="Masculino") Masculino
          option(value="Femenino") Femenino
      label.mt-3 Fecha de nacimiento:
        input(type="date", name="fechaDeNacimiento")
      label.mt-3.w-100 Estado civil:
        input(type="text", name="estadoCivil")
      label.mt-3.w-100 Ocupacion:
        input(type="text", name="ocupacion")

