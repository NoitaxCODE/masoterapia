mixin userMedicos
  form.fila(action="/medicos-form-data" method="POST")
    .subtitle.mt-4.mb-2
      h3 Datos Medicos
      input.save(type="image", src=".././img/ico/save.svg")
    .bg__2
      label Grupo sanguineo:
        input(type="text", name="sangre")
      label.mt-3 Hijos:
        input(type="number", name="hijos")
      .mt-3(data-sex) Se encuentra embarazada?
        .bg__2__radio-container
          .bg__2__radio-items
            label(for="embarazada-si") SI
            input#embarazada-si(type="radio", name="embarazada" value="SI")
          .bg__2__radio-items
            label(for="embarazada-no") NO
            input#embarazada-no(type="radio", name="embarazada" value="NO")
      label.mt-3(data-sex) Ultima menstruazion:
        input(type="date", name="menstruacion")
      .mt-3 Intervenciones quirurgicas
        .bg__2__radio-container
          .bg__2__radio-items
            label(for="intervencion-si") SI
            input#intervencion-si(type="radio", name="cirugias" value="SI")
          .bg__2__radio-items
            label(for="intervencsion-no") NO
            input#intervencion-no(type="radio", name="cirugias" value="NO")
      label.mt-3 Detalles de la int. Quir.:
        textarea(name="detalles", cols="30", rows="8") 

